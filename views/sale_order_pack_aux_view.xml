<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record model="ir.ui.view" id="sale_order_pack_aux_form">
		<field name="name">sale.order_pack_aux.form</field>
		<field name="model">sale.order_pack_aux</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Pack Product">

				<group col="4">
					<field name="product_pack_id"/>
					<field name="product_pack_qty"/>
					
				</group>
				<group col="4">
					<field name="product_id"/>
					<field name="product_qty"/>
				</group>

				<group col="4">
					<field name="product_discount"/>
				</group>



			</form>
		</field>
	</record>

	<record model="ir.ui.view" id="sale_order_pack_aux_tree">
		<field name="name">sale.order_pack_aux.tree</field>
		<field name="model">sale.order_pack_aux</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Pack Product" editable="bottom">
				<field name="product_pack_id"/>
				<field name="product_pack_qty" invisible="1"/>
				<field name="product_id"/>
				<field name="product_qty"/>
				<field name="product_discount" invisible="1"/>
			</tree>
		</field>
	</record>
</odoo>
